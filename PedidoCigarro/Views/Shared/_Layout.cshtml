<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @*<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">*@
    @RenderSection("styles", false)
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquery-masked")
    @RenderSection("Scripts", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Tomate Entregas", "Index", "Pedidos", new { @class = "navbar-brand font-italic" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Pedidos" ? "active" : "")">
                    @Html.ActionLink("Pedidos", "Index", "Pedidos", "Pedidos", new { @class = "nav-link" })
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Cigarros" ? "active" : "")">
                    @Html.ActionLink("Cigarros", "Index", "Cigarros", "Cigarros", new { @class = "nav-link" })
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Corredores" ? "active" : "")">
                    @Html.ActionLink("Corredores", "Index", "Corredores", "Corredorres", new { @class = "nav-link" })
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["controller"].ToString() == "Sobre" ? "active" : "")">
                    @Html.ActionLink("Sobre", "Index", "Sobre", "Sobre", new { @class = "nav-link" })
                </li>
            </ul>
            @if (Session["LogedUserId"] != null)
            {
                <span class="navbar-text">Bem-vindo, @Session["LogedUserId"].</span>
            }
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="py-3 bg-light mt-4 small">
        <div class="container">
            <p class="text-center">
                Copyleft
                <img src="~/Content/Images/Copyleft.svg" width="15" height="15" class="d-lg-inline-block align-content-center" alt="" />
                Tomate Entregas - 2019
            </p>
        </div>
    </footer>

    @*<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>*@
    @*<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>*@
    @*<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>*@
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
