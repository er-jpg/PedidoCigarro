@model PedidoCigarro.Models.Sobre

@{
    ViewBag.Title = "Sobre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-3">
            <img class="img-fluid" src="~/Content/Images/Opala.jpg" />
            <footer class="blockquote-footer">Unsplash por <cite title="Source Title">Vinícius Henrique</cite></footer>
        </div>
        <div class="col-md-7 col-lg-5">
            <div class="container">
                <h2>Sobre a Tomate Entregas</h2>
                <p>
                    A primeiro empresa focada completamente em entregar diretamente da fonte os melhores cigarros,
                    não só em atacado mas também por varejo.
                </p>
                <p>Fazendo história desde 2002 com as melhores rotas e segurança para seus pedidos, venha nos conhecer.</p>
                <p>Confira <a href="@Url.Action("Grafico", "Corredores", "Corredores")">aqui</a> os nosso corredores e suas entregas.</p>
            </div>
        </div>
    </div>

    <hr />

    <div class="container col-md-6 justify-content-center">
        <h3 class="mb-2">Localização</h3>
        <div class="embed-responsive embed-responsive-16by9">
            <div class="embed-responsive-item">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14406.41205827156!2d-49.3187267805664!3d-25.484928169941043!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x94dce3221e514c33%3A0x7d95b073957b51ba!2sGarden+Park+Cemetery+Saudade!5e0!3m2!1sen!2sbr!4v1559443870634!5m2!1sen!2sbr"
                        class="embed-responsive-item" frameborder="0" style="border:0" allowfullscreen></iframe>
            </div>
        </div>
        <p class="mt-2 text-lg-center">Procure por Tomate próximo à entrada.<br />
        Telefone para contato: <em>+55 (41) 998 218 764</em></p>
    </div>


    <hr />

    <div class="container col-md-6 justify-content-center">
        <h3 class="mb-2">Entre em contato</h3>
        @if (@TempData["Mensagem"] != null)
        {
            <div class="alert alert-secondary" role="alert">
                @TempData["Mensagem"]
            </div>
        }
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.DisplayNameFor(model => model.Nome)
                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Email)
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Assunto)
                @Html.EditorFor(model => model.Assunto, new { htmlAttributes = new { @class = "form-control" } })
            </div>

            <div class="form-group">
                @Html.DisplayNameFor(model => model.Mensagem)
                @Html.TextAreaFor(model => model.Mensagem, new { @class = "form-control", rows = "3" })
            </div>

            <div class="container mb-3">
                <input type="submit" value="Enviar" class="btn btn-success btn-lg btn-block" />
            </div>
        }
    </div>
</div>