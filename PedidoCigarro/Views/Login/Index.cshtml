@model PedidoCigarro.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    if (@TempData["Mensagem"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["Mensagem"]
        </div>
    }
    <div class="form-group">
        @Html.LabelFor(model => model.Usuario)
        @Html.EditorFor(model => model.Usuario, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Senha)
        @Html.PasswordFor(model => model.Senha, htmlAttributes: new { @class = "form-control" })
        <small class="form-text text-muted">Nunca compartilhe sua senha com ninguém.</small>
    </div>
    @*<button type="submit" class="btn btn-primary" value="teste">Enviar</button>*@
    <input type="submit" value="Logar" name="Index" class="btn btn-success btn-lg btn-block" />

}

