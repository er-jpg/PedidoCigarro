@model PedidoCigarro.Models.Cigarro

@{
    ViewBag.Title = "Criar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Criar</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.NomeCigarro, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.NomeCigarro, new { htmlAttributes = new { @class = "form-control", placeholder = "Nome do Cigarro" } })
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control", placeholder = "Marca" } })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Empresa)
            @Html.EditorFor(model => model.Empresa, new { htmlAttributes = new { @class = "form-control", placeholder = "Empresa Fabricante" } })
        </div>

    <div class="container mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" value="Adicionar Cigarro" class="btn btn-success btn-lg btn-block" />
            </div>
            <div class="col">
                @Html.ActionLink("Voltar", "Index", "Cigarros", new { @class = "btn btn-secondary btn-lg btn-block" })
            </div>
        </div>
    </div>
}