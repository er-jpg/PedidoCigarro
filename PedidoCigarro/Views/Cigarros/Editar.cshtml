@model PedidoCigarro.Models.Cigarro

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.IdCigarro, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.IdCigarro, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
        @Html.HiddenFor(model => model.IdCigarro)
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NomeCigarro, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.NomeCigarro, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Marca, htmlAttributes: new { @class = "control-label" })
        @Html.EditorFor(model => model.Marca, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Empresa)
        @Html.EditorFor(model => model.Empresa, new { htmlAttributes = new { @class = "form-control" } })
    </div>

    <div class="container mb-3">
        <div class="row">
            <div class="col">
                <input type="submit" value="Salvar Alterações" class="btn btn-success btn-lg btn-block" />
            </div>
            <div class="col">
                @Html.ActionLink("Voltar", "Index", "Cigarros", new { @class = "btn btn-secondary btn-lg btn-block" })
            </div>
        </div>
    </div>
}
